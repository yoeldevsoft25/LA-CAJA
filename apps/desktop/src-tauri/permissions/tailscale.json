{
    "$schema": "https://schema.tauri.app/permission/2",
    "identifier": "allow-tailscale",
    "description": "Allow executing the tailscaled sidecar",
    "commands": [
        "shell:execute",
        "shell:spawn"
    ],
    "scope": {
        "allow": [
            {
                "sidecar": "binaries/tailscaled"
            },
            {
                "sidecar": "binaries/tailscale"
            }
        ]
    }
}