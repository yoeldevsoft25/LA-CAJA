{
  "name": "@la-caja/api",
  "version": "1.0.0",
  "description": "Backend API - NestJS + Fastify",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist || true",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "migration:generate": "typeorm migration:generate -d src/database/data-source.ts",
    "migration:run": "typeorm migration:run -d src/database/data-source.ts",
    "migration:revert": "typeorm migration:revert -d src/database/data-source.ts",
    "validate:migrations": "ts-node ../../scripts/validate-migrations.ts",
    "db:rehearsal:clean": "ts-node -r tsconfig-paths/register scripts/migration-rehearsal.ts clean",
    "db:rehearsal:data": "ts-node -r tsconfig-paths/register scripts/migration-rehearsal.ts data",
    "db:rehearsal:upgrade": "ts-node -r tsconfig-paths/register scripts/migration-upgrade-rehearsal.ts",
    "db:rehearsal:upgrade:dry": "ts-node -r tsconfig-paths/register scripts/migration-upgrade-rehearsal.ts --dry-run",
    "db:partitioning:backfill": "ts-node -r tsconfig-paths/register scripts/partitioning-backfill.ts",
    "db:partitioning:backfill:dry": "ts-node -r tsconfig-paths/register scripts/partitioning-backfill.ts --dry-run",
    "debug:pg-mem": "ts-node -r tsconfig-paths/register scripts/debug-pg-mem.ts"
  },
  "dependencies": {
    "@bull-board/api": "^6.16.2",
    "@bull-board/nestjs": "^6.16.2",
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^6.12.0",
    "@hapi/boom": "^10.0.1",
    "@la-caja/domain": "*",
    "@nestjs/bull": "^11.0.4",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/cli": "^10.4.9",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^10.3.0",
    "@nestjs/platform-socket.io": "^10.4.20",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/terminus": "^10.3.0",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/typeorm": "^10.0.1",
    "@nestjs/websockets": "^10.4.20",
    "@types/bcrypt": "^6.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "@willsoto/nestjs-prometheus": "^5.5.1",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "bullmq": "^5.66.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "exceljs": "^4.4.0",
    "fastify": "^4.26.0",
    "handlebars": "^4.7.8",
    "i18next": "^25.7.4",
    "ioredis": "^5.9.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pdfkit": "^0.15.2",
    "pg": "^8.11.3",
    "pino": "^9.14.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^14.2.0",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.1.13",
    "resend": "^6.6.0",
    "rimraf": "^3.0.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pdfkit": "^0.17.4",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "pg-mem": "^3.0.8",
    "prettier": "^3.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}