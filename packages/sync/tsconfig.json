{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "moduleResolution": "node",
    "paths": {
      "@la-caja/domain": [
        "../domain/dist/index.d.ts"
      ],
      "@la-caja/crdt": [
        "../crdt/dist/index.d.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/**/__tests__/*"
  ]
}
