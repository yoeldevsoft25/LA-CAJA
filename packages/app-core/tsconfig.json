{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "paths": {
            "@la-caja/domain": [
                "../domain/dist/index.d.ts"
            ],
            "@la-caja/sync": [
                "../sync/dist/index.d.ts"
            ],
            "@la-caja/offline-core": [
                "../offline-core/dist/index.d.ts"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/*.spec.ts",
        "src/**/__tests__/*"
    ]
}